<Window x:Class="PLForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Freddy's BBQ Joint" Icon="Images/Small logo.png" Width="300" Height="500" ResizeMode="NoResize" FontWeight="Bold">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="3" Source="Images\Sign In logo.png"  Stretch="Fill"/>
        <TextBox x:Name="InputBox" Grid.Row="1" TextWrapping="Wrap" Text="Enter your Username" Foreground="Gray" FontFamily="Arial" FontSize="20" TextAlignment="Left" Height="35" FontWeight="Normal" GotFocus="TextBox_GotFocus" Margin="38,6,37,5"/>
        <Button x:Name="SignInButton" Content="Next" Background="DarkGoldenrod" Foreground="Maroon" Grid.Row="2" VerticalAlignment="Top" Height="40" Margin="47,24,47,0" FontFamily="Comic Sans MS" FontSize="20" Click="NextLogin"/>
        <Label x:Name="typeLabel" Grid.Row="0" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="25" Margin="0,169,0,88" Height="48" Width="294"/>
        <Label x:Name="nameLabel" Grid.Row="0" HorizontalContentAlignment="Center"  VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,215,0,49" Height="41" />
        <Label x:Name="UsernameLabel" Grid.Row="0" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,246,0,33" Height="26" />
        <Label x:Name="errorLabel" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="29" Width="294" FontSize="12" />
    </Grid>
</Window>
