<Window x:Class="PLForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:clr="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PLForms"
        Title="Freddy's BBQ Joint" Icon="Images/Small logo.png" Width="300" Height="500" ResizeMode="NoResize" FontWeight="Bold">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="3" Source="Images\Sign In logo.png"  Stretch="Fill"/>
        <TextBox x:Name="InputBox" Grid.Row="1" Foreground="Gray" FontFamily="Arial" FontSize="20" TextAlignment="Left" Height="35" FontWeight="Normal" GotFocus="TextBox_GotFocus" Margin="38,6,37,5">
            <TextBox.Style>
                <Style>
                    <Style.Resources>
                        <clr:String x:Key="usernameString">Enter your Username</clr:String>
                    </Style.Resources>
                    <Style.Triggers>
                        <!--<DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Hidden">
                            <Setter Property="TextBox.Text" Value="{StaticResource usernameString}"/>
                            <Setter Property="TextBox.Foreground" Value="Gray"/>
                        </DataTrigger>
                        <Trigger Property="TextBox.Text" Value="">
                            <Setter Property="TextBox.Foreground" Value="Gray"/>
                        </Trigger>-->
                        <Trigger Property="TextBox.Foreground" Value="Gray">
                            <Setter Property="TextBox.Text" Value="{StaticResource usernameString}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button x:Name="SignInButton" Background="DarkGoldenrod" Foreground="Maroon" Grid.Row="2" VerticalAlignment="Top" Height="40" Margin="47,24,47,0" FontFamily="Comic Sans MS" FontSize="20" Click="NextLogin">
            <Button.Style>
                <Style>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=InputBox, Path=Text}" Value=""/>
                                <Condition Binding="{Binding ElementName=InputPassword, Path=Visibility}" Value="Hidden"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Button.IsEnabled" Value="False"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=InputBox, Path=Foreground}" Value="Gray"/>
                                <Condition Binding="{Binding ElementName=InputPassword, Path=Visibility}" Value="Hidden"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Button.IsEnabled" Value="False"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ElementName=InputPassword, Path=Foreground}" Value="Gray"/>
                                <Condition Binding="{Binding ElementName=InputPassword, Path=Visibility}" Value="Visible"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Button.IsEnabled" Value="False"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding ElementName=backArrow, Path=Visibility}" Value="Hidden">
                            <Setter Property="Button.Content" Value="Next"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=backArrow, Path=Visibility}" Value="Visible">
                            <Setter Property="Button.Content" Value="Sign In"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Label x:Name="typeLabel" Content="{Binding Type}" Grid.Row="0" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="25" Margin="0,168,0,89" Height="48" Width="294"/>
        <Label x:Name="nameLabel" Content="{Binding Name}" Grid.Row="0" HorizontalContentAlignment="Center"  VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="0,214,0,50" Height="41" />
        <Label x:Name="UsernameLabel" Content="{Binding UserName}" Grid.Row="0" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,245,0,34" Height="26" />
        <Button x:Name="createAccountButton" Content="Create account" Margin="90,88,90,0" Grid.Row="2" VerticalAlignment="Top" Background="DarkGoldenrod" Foreground="Maroon" Click="createAccountButton_Click">
            <Button.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Visible">
                            <Setter Property="Button.Visibility" Value="Hidden"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Hidden">
                            <Setter Property="Button.Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <PasswordBox x:Name="InputPassword"  Grid.Row="1" Foreground="Gray" FontFamily="Arial" FontSize="20" Height="35" FontWeight="Normal" Margin="38,6,37,5"  GotFocus="InputPassword_GotFocus">
            <PasswordBox.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Visible">
                            <Setter Property="PasswordBox.Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Hidden">
                            <Setter Property="PasswordBox.Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>
        <Image x:Name="backArrow" Source="Images\Arrow.png"  Margin="217,176,-2,83" Stretch="Fill" Visibility="Hidden"/>
        <Button x:Name="backButton" Opacity="0.2" Margin="217,176,-2,83" Click="backButton_Click">
            <Button.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Visible">
                            <Setter Property="Button.Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=backArrow,Path=Visibility}" Value="Hidden">
                            <Setter Property="Button.Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
