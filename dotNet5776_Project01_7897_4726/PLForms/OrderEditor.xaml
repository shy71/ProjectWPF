<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PLForms" x:Class="PLForms.OrderEditor"
        Title="MangeOrder" Height="300" Width="300" Background="#FFA50221">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <local:TextControl x:Name="addressBox" Grid.Row="1" FontS="20" Str="Address" Grid.Column="1">
            <local:TextControl.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=HomeCheckBox, Path=IsChecked}" Value="True">
                            <Setter Property="local:TextControl.IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </local:TextControl.Style>
        </local:TextControl>
        <CheckBox x:Name="HomeCheckBox" Content="To Home" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="HomeCheckBox_Checked" Unchecked="HomeCheckBox_UnChecked"/>
        <Button Opacity="0" Grid.Column="1"  Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="45" Height="45"/>
        <Image Source="Images\Send Order.png" Grid.Column="1"  Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="45" Height="45"/>
    </Grid>
</Window>