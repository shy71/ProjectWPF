<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PLForms" x:Class="PLForms.Search_Bing"
        Title="Search_Bing" Height="350" Width="300">
    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--TextBox x:Name="SearchText" Grid.Row="0" TextChanged="SearchText_TextChanged"/-->
        <ScrollViewer Grid.Row="1">
            <TextBlock x:Name="SearcgResults" Foreground="Maroon" FontFamily="Comic Sans MS" Background="DarkGoldenrod" Grid.Row="1"/>
        </ScrollViewer>
        <Button x:Name="Ok" Grid.Row="2" Content="OK" Click="Ok_Click" FontSize="20" Margin="80,0,80,0"/>
        <local:TextControl x:Name="SearchText"  HorizontalAlignment="Left" Foreground="Maroon" FontFamily="Comic Sans MS" Background="Beige" Grid.Row="0" Width="292" Height="45" Changed="SearchText_Changed" VerticalAlignment="Top"/>
    </Grid>
</Window>
