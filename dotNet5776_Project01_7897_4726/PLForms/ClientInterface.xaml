<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PLForms" x:Class="PLForms.ClientInterface"
        Title="ClientInterface" Height="1000" Width="1500" Loaded="Window_Loaded" Background="#FFA50221">
    <Grid x:Name="BigGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="add" Source="Images/Add.png" Height="150" Width="150" Grid.Column="2" Grid.Row="1"/>
        <ScrollViewer Grid.Column="1">
            <StackPanel x:Name="stackPanel">
                <Label Content="Active Orders" HorizontalContentAlignment="Center" FontSize="50"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
