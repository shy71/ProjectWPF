<Window x:Class="PLForms.Print_Best_Dish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print_Best_Dish" Height="300" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="BestDish" Grid.Row="0"/>
        <Button x:Name="Ok" Grid.Row="1" Content="OK" Click="Ok_Click" FontSize="20" Margin="80,0,80,0"/>
    </Grid>
</Window>
