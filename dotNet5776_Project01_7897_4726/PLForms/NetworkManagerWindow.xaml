<Window x:Class="PLForms.NetworkManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetworkManagerWindow" Height="300" Width="300">
    <Grid  Background="LightBlue" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="IenformationText" Grid.Row="0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Text="Choose from the following options:" >
            
        </TextBlock>
        <Button x:Name="AddBranchButton" Grid.Row="1" Background="White" Content="Add a new branch" FontSize="20" Click="AddBranchButton_Click"/>
        <Button x:Name="AddNewBranchManagerButton" Grid.Row="2" Background="White" Content="Appoint a new branch manager" FontSize="18" Click="AddNewBranchManagerButton_Click" />
        <Button x:Name="AddNewNetworkManagerButton" Grid.Row="3" Background="White" Content="Appoint a new network manager" FontSize="18" Click="AddNewNetworkManagerButton_Click" />
        <Button x:Name="UpdateUserButton" Grid.Row="4" Background="White" Content="Change your details" FontSize="20" Click="UpdateUserButton_Click" />
        
    </Grid>
</Window>
