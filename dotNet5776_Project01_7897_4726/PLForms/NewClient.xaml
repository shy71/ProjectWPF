<Window x:Class="PLForms.NewClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewClient" Height="400" Width="400" Background="#FFE6CBC8">
    <Window.Resources>
        <Style x:Key="BoxStyle" TargetType="Control">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="BorderBrush" Value="Black"/>
        </Style>
        <Style x:Key="TextBoxStyle" BasedOn="{StaticResource BoxStyle}" TargetType="TextBox">
            <EventSetter Event="GotFocus" Handler="Box_GotFocus"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="">
                    <Setter Property="BorderBrush" Value="Red"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Create your Freddy's BBQ Joint account!" Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="usernameBox" Grid.Row="1" Text="Username:" Style="{StaticResource TextBoxStyle}"/>
        <PasswordBox x:Name="passowrdBox1" Grid.Row="2" Style="{StaticResource BoxStyle}" GotFocus="passwordLabel1_GotFocus"/>
        <Label x:Name="passwordLabel1" Content="Password:" Grid.Row="2" Foreground="Gray" Opacity="0.5" VerticalContentAlignment="Center" Margin="0,0,326,0"/>
        <PasswordBox x:Name="passowrdBox2" Grid.Row="3" Style="{StaticResource BoxStyle}" GotFocus="passwordLabel2_GotFocus"/>
        <Label x:Name="passwordLabel2" Content="Password Conformation:" Grid.Row="3" Foreground="Gray" Opacity="0.5" VerticalContentAlignment="Center" Margin="0,0,253,0"/>
        <TextBox x:Name="addressBox" Grid.Row="4" Text="Address:" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="ageBox" Text="Age" Grid.Row="5" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="creditCardBox" Grid.Row="6" Text="Credit Card:" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="nameBox" Grid.Row="7" Text="Name:" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="idBox" Grid.Row="8" Text="ID:" Style="{StaticResource TextBoxStyle}"/>
        <Button x:Name="nextButton" Grid.Row="9" Content="Next step!" Background="Blue" Foreground="White" Margin="308,5,10,5" FontWeight="Bold" />
    </Grid>
</Window>
